	//adesso.getDate();
	//wn.getDate();
	
	if(wn.before(adesso)||wn.equals(adesso)){
      gs.addErrorMessage("ERRORE DATA NEL PASSATO!");
      current.setAbortAction(true);
  }
	
	var WhenNeeded = wn.getDate();
	var oggi = adesso.getDate();
	var rightnow = new GlideDateTime();
	var domani = rightnow.getDate();
	domani.addDaysLocalTime(1);
	
